<td>
  <p>
    <span><%= model.name %></span>
    <span class="tag is-danger"><%= model.type_i18n %></span>
  </p>
  <p class="text-grey"><%= model.organ&.name %></p>
</td>
<td>
  <p class="family-monospace"><%= model.appid %></p>
</td>
<td>
  <%= form_with theme: 'switch', model: model, scope: :app, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :shared, data: { action: 'input#submit' }, id: nil %>
  <% end %>
  <%= form_with theme: 'switch', model: model, scope: :app, url: { action: 'update', id: model.id }, data: { controller: 'input' }, class: 'mt-2' do |f| %>
    <%= f.check_box :global, data: { action: 'input#submit' }, id: nil %>
  <% end %>
</td>
