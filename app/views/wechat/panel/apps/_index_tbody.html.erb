<td><%= model.type_i18n %></td>
<td><%= model.name %></td>
<td>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:appid) %></dt>
    <dd><%= model.appid %></dd>
  <% end if model.appid.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:secret) %></dt>
    <dd><%= model.secret %></dd>
  <% end if model.secret.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:agentid) %></dt>
    <dd><%= model.agentid %></dd>
  <% end if model.agentid.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:mch_id) %></dt>
    <dd><%= model.mch_id %></dd>
  <% end if model.mch_id.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:key) %></dt>
    <dd><%= model.key %></dd>
  <% end if model.key.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:key_v3) %></dt>
    <dd><%= model.key_v3 %></dd>
  <% end if model.key_v3.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:serial_no) %></dt>
    <dd><%= model.serial_no %></dd>
  <% end if model.serial_no.present? %>
</td>
<td>
  <%= form_with theme: nil, model: model, scope: :app, url: { action: 'update', id: model.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :shared, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check"></label>
  <% end %>
</td>
<td>
  <%= link_to({ controller: 'admin/responses', app_id: model.id }, aria: { label: t('wechat.admin.responses.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-light fa-reply-all"></i>
  <% end %>
  <%= link_to({ controller: 'admin/requests', app_id: model.id }, aria: { label: t('wechat.admin.requests.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-light fa-comments"></i>
  <% end %>
  <%= link_to({ controller: 'admin/tags', app_id: model.id }, aria: { label: t('wechat.admin.tags.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-light fa-user-tag"></i>
  <% end %>
  <%= link_to({ controller: 'admin/templates', app_id: model.id }, aria: { label: t('wechat.admin.templates.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-light fa-inbox"></i>
  <% end %>
</td>
