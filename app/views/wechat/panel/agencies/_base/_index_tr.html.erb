<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'requests', agency_id: model.id }, aria: { label: t('wechat.admin.requests.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-comments"></i>
      <% end %>
      <%= link_to({ controller: 'menu_apps', agency_id: model.id }, aria: { label: t('wechat.panel.menu_apps.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-bars"></i>
      <% end %>
      <%= link_to({ controller: 'wechat_users', agency_id: model.id }, aria: { label: t('wechat.panel.wechat_users.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-users"></i>
      <% end %>
      <%= link_to({ controller: 'scenes', agency_id: model.id }, aria: { label: t('wechat.panel.scenes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-qrcode"></i>
      <% end %>
      <%= link_to({ controller: 'templates', agency_id: model.id }, aria: { label: t('wechat.panel.templates.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-inbox"></i>
      <% end %>
    </div>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to model.fast_url, aria: { label: '快速注册' }, target: '_blank', class: 'button is-small is-rounded is-light' do %>
        <i class="fa-solid fa-bolt has-text-success"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= link_to({ action: 'organ', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-building has-text-link"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
    </div>
  </td>
</tr>
