  <% end %>
  <%= link_to({ controller: 'menu_apps', app_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'bars' %>
    <span class="ml-1"><%= t('.menu_apps.index.title') %></span>
