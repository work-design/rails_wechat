  <% end %>
  <%= link_to({ controller: 'scenes', app_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'qrcode' %>
    <span class="ml-1"><%= t('.scenes.index.title') %></span>
  <% end %>
  <%= link_to({ controller: 'templates', app_id: model.id }, class: 'button is-small is-borderless') do %>
    <%= svg_tag 'inbox' %>
    <span class="ml-1"><%= t('.templates.index.title') %></span>
  <% end %>
</div>
