<%= form_with theme: 'modal', model: @template_config, url: { action: 'create' } do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= render 'error_messages', target: @template_config %>
    <%= f.select :type, options_for_select(Wechat::TemplateConfig.options_i18n(:type)) %>
    <%= f.text_field :tid %>
    <%= f.text_field :description %>
  </section>
  <%= f.submit %>
<% end %>
