<td>
  <p>
    <span><%= model.name %></span>
    <span class="tag is-danger"><%= model.type_i18n %></span>
  </p>
  <p class="has-text-grey"><%= model.organ&.name %></p>
</td>
<td>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:appid) %></dt>
    <dd><%= model.appid %></dd>
  <% end if model.appid.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:mch_id) %></dt>
    <dd><%= model.mch_id %></dd>
  <% end if model.mch_id.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:serial_no) %></dt>
    <dd><%= model.serial_no %></dd>
  <% end if model.serial_no.present? %>
</td>
