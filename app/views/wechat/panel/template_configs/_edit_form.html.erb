<%= form_with theme: 'modal', model: @template_config, scope: :template_config, url: { action: 'update' } do |f| %>
  <%= render 'modal_header' %>
  <section class="modal-card-body">
    <%= render 'error_messages', target: @template_config %>
    <%= f.fields :template_key_words, all: { normal: nil } do |ef| %>
      <%= render partial: 'item_form', locals: { ef: ef } %>
    <% end %>
    <%= f.text_field :notifiable_type %>
    <%= f.text_field :code %>
    <%= f.text_field :description %>
  </section>
  <%= f.submit %>
<% end %>
