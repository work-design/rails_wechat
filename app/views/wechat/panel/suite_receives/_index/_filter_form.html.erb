<%= form_with theme: 'search', model: Wechat::SuiteTicket.new, url: { action: params[:action] } do |f| %>
  <div class="field-body">
    <%= f.text_field :info_type %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:info_type]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
