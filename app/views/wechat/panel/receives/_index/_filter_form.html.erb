<%= form_with theme: 'search', model: Wechat::Receive.new, url: { action: params[:action] } do |f| %>
  <div class="field-body">
    <%= f.text_field :appid %>
    <%= f.text_field :open_id %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:open_id, :appid]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
