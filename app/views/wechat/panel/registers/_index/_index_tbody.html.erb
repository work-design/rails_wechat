<td>
  <p><%= link_to model.id_name, { action: 'show', id: model.id } %></p>
  <p><%= model.id_number %></p>
</td>
<td>
  <p><%= model.email %></p>
  <p><%= model.email_code %></p>
  <p class="has-text-danger"><%= model.password %></p>
</td>
<td>
  <p>
    <%= model.mobile %>
    <%= link_to({ action: 'edit_code', id: model.id }, method: :put, aria: { label: '验证码' }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-paper-plane"></i>
    <% end %>
  </p>
  <p><%= model.mobile_code %></p>
</td>
<td>
  <p>
    <%= image_tag model.bind_qrcode, class: 'image is-24x24' if model.bind_qrcode.attached? %>
    <%= link_to({ action: 'edit_bind', id: model.id }, aria: { label: t('.bind') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-qrcode"></i>
    <% end %>
  </p>
  <p>
    <%= image_tag model.qrcode, class: 'image is-24x24' if model.qrcode.attached? %>
    <%= link_to({ action: 'qrcode', id: model.id }, aria: { label: t('.qrcode') }, class: 'button is-small is-rounded is-light') do %>
      <i class="fa-solid fa-qrcode"></i>
    <% end %>
  </p>
</td>
<td>
  <p><%= model.state_i18n %></p>
  <p><%= model.appid %></p>
</td>
<td><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></td>
