<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" class="visibility-hidden">
      <%= button_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info text-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil text-link"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="visibility-hidden">
      <%= link_to({ controller: 'scenes', agency_id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-qrcode"></i>
        <span class="pl-1"><%= t('.scenes.index.title') %></span>
      <% end %>
      <%= button_to({ action: 'qrcode', id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-qrcode text-primary"></i>
        <span class="pl-1"><%= t('.program_agencies.qrcode.title') %></span>
      <% end if model.is_a?(Wechat::ProgramAgency) %>
      <%= button_to({ action: 'templates', id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-paperclip text-info"></i>
        <span class="pl-1"><%= t('.program_agencies.templates.title') %></span>
      <% end %>
      <%= button_to({ controller: 'agencies', action: 'organ', id: model.id }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-building text-link"></i>
        <span class="pl-1"><%= t('.agencies.organ.title') %></span>
      <% end %>
    </div>
  </td>
</tr>
