<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <%= button_to({ action: 'commit', id: @program_agency.id, platform_template_id: model.id }, method: :delete, aria: { label: t('.destroy') }, class: 'button is-small is-rounded is-light', form: { data: { turbo_confirm: t('.confirm'), turbo_scroll: true } }) do %>
      <i class="fa-solid fa-trash has-text-danger"></i>
    <% end %>
  </td>
</tr>
