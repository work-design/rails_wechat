<tr data-depth="10" data-controller="tree show" data-tree-target="item" data-action="mouseenter->show#show mouseleave->show#hide" class="<%= 'has-background-white-ter' %>">
  <td colspan="5"></td>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'menu_root_apps', action: 'new' }, data: { turbo_frame: 'modal' }, class: 'button is-small is-link') do %>
        <i class="fa-solid fa-plus"></i>
        <span><% t('.new') %></span>
      <% end %>
    </div>
  </td>
</tr>
<% Wechat::MenuRootApp.where(appid: params[:app_appid], menu_root_id: nil).each do |child| %>
  <%= render partial: 'root_tbody', layout: 'root_app_tr', locals: { model: child } %>
<% end %>
