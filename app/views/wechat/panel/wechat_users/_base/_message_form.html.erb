<%= form_with theme: nil, url: { action: 'message' }, id: 'chat_form', class: 'box' do |f| %>
  <div class="field">
    <%= f.text_area :content, autofocus: true, class: 'textarea is-borderless' %>
  </div>
  <div class="has-block-right">
    <%= button_tag class: 'button' do %>
      <span class="icon">
        <i class="fa-solid fa-xl fa-paper-plane"></i>
      </span>
    <% end %>
  </div>
<% end %>

<div>
  <%= form_with theme: nil, model: @wechat_user, url: { action: 'update', id: @wechat_user.id }, data: { controller: 'input' } do |f| %>
    <%= f.check_box :auto_reply, data: { input_target: 'checkbox' }, id: nil, class: 'switch is-rounded' %>
    <label data-action="click->input#check">AI 自动回复</label>
  <% end %>
</div>