<table class="table as-search">
  <tr>
    <th>
      <%= link_to({ controller: 'tags', app_id: @app.id }) do %>
        <span><%= Wechat::WechatUser.human_attribute_name(:tag_id) %></span>
      <% end %>
    </th>
    <td>
      <%= link_to t('.all'), filter_params(except: ['user_tags.tag_name']), class: active_helper('user_tags.tag_name': '', active: 'button is-info', item: 'button is-light') %>
      <% @tags.each do |tag| %>
        <%= link_to tag.name, filter_params('user_tags.tag_name': tag.name), class: active_helper('user_tags.tag_name': tag.name, active: 'button is-info', item: 'button is-light') %>
      <% end %>
    </td>
  </tr>
</table>
