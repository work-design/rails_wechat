<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th>
        <p><%= WechatRegister.human_attribute_name(:id_name) %></p>
        <p><%= WechatRegister.human_attribute_name(:id_number) %></p>
      </th>
      <th><%= WechatRegister.human_attribute_name(:verify_code) %></th>
      <th><%= WechatRegister.human_attribute_name(:bind_url) %></th>
      <th><%= WechatRegister.human_attribute_name(:state) %></th>
      <th><%= WechatRegister.human_attribute_name(:appid) %></th>
      <th>
        <%= link_to new_panel_wechat_register_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_registers.each do |wechat_register| %>
    <tr>
      <td>
        <p><%= wechat_register.id_name %></p>
        <p><%= wechat_register.id_number %></p>
      </td>
      <td><%= wechat_register.verify_code %></td>
      <td><%= image_tag wechat_register.bind_url, class: 'image is-24x24' if wechat_register.bind_url.present? %></td>
      <td><%= wechat_register.state_i18n %></td>
      <td><%= wechat_register.appid %></td>
      <td>
        <%= link_to panel_wechat_register_path(wechat_register), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_panel_wechat_register_path(wechat_register), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to bind_panel_wechat_register_path(wechat_register), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-qrcode"></i>
        <% end %>
        <%= link_to app_panel_wechat_register_path(wechat_register), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fab fa-weixin"></i>
        <% end %>
        <%= link_to panel_wechat_register_path(wechat_register), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_registers %>
