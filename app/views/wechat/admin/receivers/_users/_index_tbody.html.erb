<td>
  <p><%= model.name %></p>
  <p class="has-text-grey"><%= model.uid %></p>
</td>
<td>
  <% model.user_tags.each do |user_tag| %>
    <span class="tag is-success">
      <span><%= user_tag.tag.name %></span>
      <%= button_to({ controller: 'user_tags', action: 'destroy', id: user_tag.id }, method: :delete, data: { turbo_confirm: t('.destroy.confirm') }, class: 'delete is-small has-text-grey') do %>
      <% end %>
    </span>
  <% end %>
</td>
<td><%= model.remark %></td>
<td>
  <p>
  <% if model.account %>
    <%= link_to model.identity, { controller: 'auth/panel/accounts', action: 'show', id: model.account.id }, data: { turbo_frame: 'modal' } %>
  <% else %>
    <%= model.identity %>
  <% end %>
  </p>
  <p><%= model.user&.id %></p>
</td>
<td>
  <p><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
  <p><time data-controller="time"><%= model.unsubscribe_at&.to_fs(:iso8601) %></time></p>
</td>
