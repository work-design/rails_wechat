<%= render 'shared/error_messages', target: @wechat_response %>
<%= f.select :type, options_for_select(WechatResponse.options_i18n(:type), @wechat_response.type) %>
<%= f.check_box :contain %>
<%= f.text_field :match_value %>
<%= f.text_area :default_response %>
<%= f.select :request_type, options_for_select(WechatRequest.options_i18n(:type), @wechat_response.request_type) %>
<%= f.select :effective_type, options_for_select(WechatReply.options_i18n(:type), @wechat_response.reply_type) %>

<%= f.submit %>
