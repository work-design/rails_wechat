<%= render 'shared/error_messages', target: @wechat_response %>
<%= f.text_field :match_value %>
<%= f.check_box :contain %>
<%= f.number_field :expire_seconds, step: 1, placeholder: '2592000' %>
<%= f.select :effective_type, options_for_select(WechatReply.options_i18n(:type), @wechat_response.effective_type) %>
<%=
  f.select(
      :request_types,
      options_for_select(WechatRequest.options_i18n(:type), @wechat_response.request_types),
      {},
      { multiple: true, data: { controller: 'choice' } }
  )
%>
