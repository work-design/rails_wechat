<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatReply.human_attribute_name(:type) %></th>
      <th><%= WechatReply.human_attribute_name(:value) %></th>
      <th><%= WechatReply.human_attribute_name(:body) %></th>
      <th>
        <%= link_to new_admin_wechat_app_wechat_reply_path(@wechat_app), remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_replies.each do |wechat_reply| %>
    <tr>
      <td><%= wechat_reply.type_i18n %></td>
      <td><%= wechat_reply.value %></td>
      <td><%= wechat_reply.body %></td>
      <td>
        <%= link_to admin_wechat_app_wechat_reply_path(@wechat_app, wechat_reply), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_app_wechat_reply_path(@wechat_app, wechat_reply), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_reply_path(@wechat_app, wechat_reply), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_replies %>
