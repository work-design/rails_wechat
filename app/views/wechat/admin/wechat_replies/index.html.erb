<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= WechatReply.human_attribute_name(:type) %></th>
      <th><%= WechatReply.human_attribute_name(:value) %></th>
      <th><%= WechatReply.human_attribute_name(:body) %></th>
      <th>
        <%= link_to new_admin_wechat_app_wechat_reply_path(@wechat_app), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_replies.each do |wechat_reply| %>
    <tr>
      <td><%= wechat_reply.type_i18n %></td>
      <td><%= wechat_reply.value %></td>
      <td><%= wechat_reply.body %></td>
      <td>
        <%= link_to admin_wechat_app_wechat_reply_path(@wechat_app, wechat_reply), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_app_wechat_reply_path(@wechat_app, wechat_reply), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_reply_path(@wechat_app, wechat_reply), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_replies %>
