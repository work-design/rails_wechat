<td><%= model.type_i18n %></td>
<td>
  <% if model.is_a?(Wechat::NewsReply) %>
    <% model.news_reply_items.each do |item| %>
      <p><%= item.title %></p>
      <p><%= item.description %></p>
      <p><%= item.url %></p>
      <p><%= image_tag item.pic_url, class: 'image is-32x32' %></p>
    <% end %>
  <% else %>
    <%= model.value %>
  <% end %>
</td>
