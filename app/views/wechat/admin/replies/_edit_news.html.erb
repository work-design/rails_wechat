<%= form_with model: @reply, scope: :reply, url: { action: 'update' } do |f| %>
  <%= render 'shared/error_messages', target: @reply %>
  <%= f.fields :expense_items, can: { wrap_all: false, label: false, placeholder: true }, wrap: { input: 'field' } do |ef| %>
    <%= render partial: 'item_form', locals: { ef: ef } %>
  <% end %>
  <%= f.submit %>
<% end %>
