<%= form_with model: @wechat_menu, scope: :wechat_menu, url: { action: 'create' } do |f| %>
  <%= f.hidden_field :appid, value: params[:appid] %>
  <%= f.hidden_field :type, value: 'ParentMenu' %>
  <%= f.text_field :name, required: true %>
  <%= f.number_field :position, step: 1 %>
  <%= f.submit %>
<% end %>
