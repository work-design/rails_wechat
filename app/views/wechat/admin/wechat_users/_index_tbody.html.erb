<tr>
  <td><%= wechat_user.name %></td>
  <td><%= wechat_user.uid %></td>
  <td>
    <% wechat_user.wechat_tags.each do |wechat_tag| %>
      <span class="button is-small"><%= wechat_tag.name %></span>
    <% end %>
  </td>
  <td><%= wechat_user.remark %></td>
  <td><%= wechat_user.unionid %></td>
  <td><%= wechat_user.account_id %></td>
  <td><%= wechat_user.user_id %></td>
  <td>
    <%= link_to({ action: 'edit', id: wechat_user.id }, aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-pencil-alt"></i>
    <% end %>
    <%= link_to({ action: 'destroy', id: wechat_user.id }, method: :delete, aria: { label: t('.destroy') }, remote: true, class: 'button is-small is-rounded is-light') do %>
      <i class="fas fa-trash"></i>
    <% end %>
  </td>
</tr>
