<div class="ui modal" id="modal">
  <i class="fas fa-times close"></i>
  <div class="ui header">
    <%= t('.edit') %>
  </div>

  <div class="content">
    <%= form_with model: @wechat_user, url: admin_wechat_app_wechat_user_path(@wechat_app, @wechat_user) do |f| %>
      <%= f.collection_select :wechat_tag_ids, @wechat_tags, :id, :name, {}, { multiple: true } %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
