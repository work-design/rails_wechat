<tr>
  <td class="has-text-right"><%= Wechat::WechatRequest.human_attribute_name(:wechat_user_id) %></td>
  <td>
    <% if @wechat_request.wechat_user.user %>
      <%= link_to @wechat_request.wechat_user.user.name, panel_user_path(@wechat_request.wechat_user.user_id), text: true %>
    <% else %>
      <%= link_to @wechat_request.wechat_user.name, admin_oauth_user_path(@wechat_request.wechat_user), text: true %>
    <% end %>
  </td>
</tr>
<tr>
  <td class="has-text-right"><%= Wechat::WechatRequest.human_attribute_name(:body) %></td>
  <td><%= simple_format @wechat_request.body %></td>
</tr>
<tr>
  <td class="has-text-right"><%= Wechat::WechatRequest.human_attribute_name(:wechat_reply_id) %></td>
  <td><%= @wechat_request.wechat_reply&.value %></td>
</tr>
