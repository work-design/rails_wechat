<table class="table is-fullwidth">
  <thead>
    <tr>
      <th class="six wide">
        <%= link_to t('.edit'), edit_admin_wechat_app_wechat_request_path(@wechat_app, @wechat_request), class: 'ui mini blue right floated button', remote: true %>
      </th>
      <th class="ten wide"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td class="has-text-right"><%= WechatRequest.human_attribute_name(:wechat_user_id) %></td>
      <td>
        <% if @wechat_request.wechat_user.user %>
          <%= link_to @wechat_request.wechat_user.user.name, panel_user_path(@wechat_request.wechat_user.user_id), remote: true, text: true %>
        <% else %>
          <%= link_to @wechat_request.wechat_user.name, admin_oauth_user_path(@wechat_request.wechat_user_id), remote: true, text: true %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td class="has-text-right"><%= WechatRequest.human_attribute_name(:body) %></td>
      <td><%= simple_format @wechat_request.body %></td>
    </tr>
  </tbody>
</table>
