<%= form_with theme: 'search', model: WechatRequest.new do |f| %>
  <div class="fields">
    <%= f.date_field 'created_at-gte', value: params['created_at-gte'] %>
    <%= f.date_field 'created_at-lte', value: params['created_at-lte'] %>
    <%= f.submit %>
    <%= link_to t('.clear'), filter_params(except: ['created_at-gte', 'created_at-lte']), class: 'ui button' %>
  </div>
<% end %>
<div class="ui divider"></div>
<dl>
  <dt><%= WechatRequest.human_attribute_name(:type) %></dt>
  <dd>
    <%= link_to t('.all'), filter_params(except: [:type]), class: active_params(type: '', active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% WechatRequest.options_i18n(:type).each do |text, value| %>
      <%= link_to text, filter_params(type: value), class: active_params(type: value, active_class: 'ui basic blue button', item_class: 'ui basic white button') %>
    <% end %>
  </dd>
</dl>
