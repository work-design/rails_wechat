<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="ui bottom attached selectable table">
  <thead>
    <tr>
      <th><%= WechatApp.human_attribute_name(:type) %></th>
      <th><%= WechatApp.human_attribute_name(:name) %></th>
      <th>
        <p><%= WechatApp.human_attribute_name(:appid) %></p>
        <p><%= WechatApp.human_attribute_name(:secret) %></p>
        <p><%= WechatApp.human_attribute_name(:agentid) %></p>
        <p><%= WechatApp.human_attribute_name(:mch_id) %></p>
        <p><%= WechatApp.human_attribute_name(:key) %></p>
      </th>
      <th><%= WechatApp.human_attribute_name(:encrypt_mode) %></th>
      <th>
        <p><%= WechatApp.human_attribute_name(:help) %></p>
        <p><%= WechatApp.human_attribute_name(:help_without_user) %></p>
        <p><%= WechatApp.human_attribute_name(:help_user_disabled) %></p>
        <p><%= WechatApp.human_attribute_name(:help_feedback) %></p>
      </th>
      <th><%= WechatApp.human_attribute_name(:enabled) %></th>
      <th><%= WechatApp.human_attribute_name(:primary) %></th>
      <th></th>
      <th>
        <%= link_to new_admin_wechat_app_path, remote: true, class: 'ui mini green button' do %>
          <i class="fas fa-plus"></i><% t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_apps.each do |wechat_app| %>
    <tr>
      <td><%= wechat_app.type_i18n %></td>
      <td><%= wechat_app.name %></td>
      <td>
        <p><%= wechat_app.appid %></p>
        <p><%= wechat_app.secret %></p>
        <p><%= wechat_app.agentid %></p>
        <p><%= wechat_app.mch_id %></p>
        <p><%= wechat_app.key %></p>
      </td>
      <td>
        <div class="ui toggle checkbox">
          <%= check_box_tag '[wechat_app]encrypt_mode', nil, wechat_app.encrypt_mode, data: { method: :patch, remote: true, url: admin_wechat_app_path(wechat_app), submit: true }, id: nil %>
        </div>
      </td>
      <td>
        <p><%= wechat_app.help %></p>
        <p><%= wechat_app.help_without_user %></p>
        <p><%= wechat_app.help_user_disabled %></p>
        <p><%= wechat_app.help_feedback %></p>
        <%= link_to help_admin_wechat_app_path(wechat_app), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
      </td>
      <td>
        <div class="ui toggle checkbox">
          <%= check_box_tag '[wechat_app]enabled', nil, wechat_app.enabled, data: { method: :patch, remote: true, url: admin_wechat_app_path(wechat_app), submit: true }, id: nil %>
        </div>
      </td>
      <td>
        <div class="ui toggle checkbox <%= active_assert(wechat_app.primary, expected: 'disabled', unexpected: '') %>">
          <%= check_box_tag '[wechat_app]primary', nil, wechat_app.primary, data: { method: :patch, remote: true, url: admin_wechat_app_path(wechat_app), submit: true }, id: nil %>
        </div>
      </td>
      <td>
        <%= link_to admin_wechat_menus_path(wechat_app_id: wechat_app.id), data: { tooltip: t('wechat.admin.wechat_menus.index.title') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-bars"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_responses_path(wechat_app), data: { tooltip: t('wechat.admin.wechat_responses.index.title') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-reply-all"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_requests_path(wechat_app), data: { tooltip: t('wechat.admin.wechat_requests.index.title') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-comments"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_tags_path(wechat_app), data: { tooltip: t('wechat.admin.wechat_tags.index.title') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-user-tag"></i>
        <% end %>
        <%= link_to admin_wechat_templates_path(wechat_app_id: wechat_app.id), data: { tooltip: t('wechat.admin.wechat_templates.index.title') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-inbox"></i>
        <% end %>
      </td>
      <td>
        <%= link_to info_admin_wechat_app_path(wechat_app), data: { tooltip: t('.info') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-cog"></i>
        <% end %>
        <%= link_to admin_wechat_app_path(wechat_app), data: { tooltip: t('.show') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_app_path(wechat_app), data: { tooltip: t('.edit') }, remote: true, class: 'ui mini circular icon button' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_app_path(wechat_app), method: :delete, data: { tooltip: t('.destroy'), confirm: t('.confirm') }, class: 'ui mini circular icon button' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
