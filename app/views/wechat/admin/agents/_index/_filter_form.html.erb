<%= form_with theme: 'search', model: Wechat::Agent.new, url: { action: params[:action] } do |f| %>
  <div class="field-body">
    <%= f.text_field :name %>
    <%= f.text_field :appid %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(except: [:name, :appid]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
