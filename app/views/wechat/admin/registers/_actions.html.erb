<%= link_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'weui-form-preview__btn weui-form-preview__btn_default') do %>
  <%= svg_tag 'pencil' %>
<% end %>
<%= link_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.destroy.confirm') }, class: 'weui-form-preview__btn weui-form-preview__btn_default') do %>
  <%= svg_tag 'trash' %>
<% end %>
<%= link_to({ action: 'edit_code', id: model.id }, aria: { label: t('.edit.title') }, class: 'weui-form-preview__btn weui-form-preview__btn_default') do %>
  <%= svg_tag 'mobile' %>
<% end unless model.mobile_code %>