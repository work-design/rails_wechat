<td><strong><%= model.name %></strong></td>
<td colspan="2">
  <%= button_to({ action: 'new', menu_root_id: model.id }, class: 'button is-small is-link') do %>
    <%= svg_tag 'plus' %>
    <span><% t('.new.title') %></span>
  <% end %>
</td>
<td><strong class="text-success"><%= model.position %></strong></td>
<td>
  <div data-show-target="item" class="visibility-hidden">
    <%= button_to({ controller: 'menu_roots', action: 'new', position: model.position }, aria: { label: t('.edit.title') }, class: 'button is-small is-borderless') do %>
      <%= svg_tag 'pencil' %>
    <% end %>
  </div>
</td>