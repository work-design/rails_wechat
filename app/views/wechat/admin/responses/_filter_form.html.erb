<%= form_with theme: 'search', model: Wechat::Response.new do |f| %>
  <div class="field-body">
    <%= f.text_field :name %>
    <div class="field is-narrow">
      <%= f.submit %>
      <%= link_to t('.clear'), filter_params(only: [:name]), class: 'button is-light' %>
    </div>
  </div>
<% end %>
