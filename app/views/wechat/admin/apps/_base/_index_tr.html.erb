<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'menu_apps', app_appid: model.appid }, aria: { label: t('wechat.admin.menu_apps.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-bars"></i>
      <% end %>
      <%= link_to({ controller: 'responses', app_appid: model.appid }, aria: { label: t('wechat.admin.responses.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-reply-all"></i>
      <% end %>
      <%= link_to({ controller: 'requests', app_appid: model.appid }, aria: { label: t('wechat.admin.requests.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-comments"></i>
      <% end %>
      <%= link_to({ controller: 'tags', app_appid: model.appid }, aria: { label: t('wechat.admin.tags.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-user-tag"></i>
      <% end %>
      <%= link_to({ controller: 'wechat_users', app_appid: model.appid }, aria: { label: t('wechat.admin.wechat_users.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-users"></i>
      <% end %>
      <%= link_to({ controller: 'templates', app_appid: model.appid }, aria: { label: t('wechat.admin.templates.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-inbox"></i>
      <% end %>
      <%= link_to({ controller: 'scenes', app_appid: model.appid }, aria: { label: t('wechat.admin.scenes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-qrcode"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="mt-1" style="visibility: hidden">
      <%= link_to({ action: 'info', appid: model.appid }, aria: { label: t('wechat.admin.apps.info.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cog"></i>
      <% end %>
      <%= link_to({ controller: 'app_configs', app_appid: model.appid }, aria: { label: t('wechat.admin.app_configs.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cogs"></i>
      <% end %>
      <%= button_to({ action: 'show', appid: model.appid }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= button_to({ action: 'edit', appid: model.appid }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', appid: model.appid }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
  </td>
</tr>
