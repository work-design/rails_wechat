<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'menu_apps', appid: model.appid }, aria: { label: t('wechat.admin.menu_apps.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-bars"></i>
      <% end %>
      <%= link_to({ controller: 'responses', appid: model.appid }, aria: { label: t('wechat.admin.responses.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-reply-all"></i>
      <% end %>
      <%= link_to({ controller: 'requests', appid: model.appid }, aria: { label: t('wechat.admin.requests.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-comments"></i>
      <% end %>
      <%= link_to({ controller: 'tags', appid: model.appid }, aria: { label: t('wechat.admin.tags.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-user-tag"></i>
      <% end %>
      <%= link_to({ controller: 'wechat_users', appid: model.appid }, aria: { label: t('wechat.admin.wechat_users.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-users"></i>
      <% end %>
      <%= link_to({ controller: 'templates', appid: model.appid }, aria: { label: t('wechat.admin.templates.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-inbox"></i>
      <% end %>
      <%= link_to({ controller: 'scenes', appid: model.appid }, aria: { label: t('wechat.admin.scenes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-qrcode"></i>
      <% end %>
    </div>
    <div data-show-target="item" class="mt-1" style="visibility: hidden">
      <%= link_to({ action: 'info', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('wechat.admin.apps.info.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cog"></i>
      <% end %>
      <%= link_to({ controller: 'app_configs', appid: model.appid }, aria: { label: t('wechat.admin.app_configs.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-cogs"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.edit') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil has-text-link"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash has-text-danger"></i>
      <% end %>
    </div>
  </td>
</tr>
