<%= render 'wechat_nav_user' %>
<%= render 'filter' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= WechatTag.human_attribute_name(:name) %></th>
      <th><%= WechatTag.human_attribute_name(:tag_id) %></th>
      <th><%= WechatTag.human_attribute_name(:count) %></th>
      <th><%= WechatTag.human_attribute_name(:wechat_user_tags_count) %></th>
      <th>
        <%= link_to new_admin_wechat_app_wechat_tag_path(@wechat_app), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><%= t('.new') %>
        <% end %>
        <%= link_to sync_admin_wechat_app_wechat_tags_path(@wechat_app), method: :post, remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-sync-alt"></i><%= t('.sync') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_tags.each do |wechat_tag| %>
    <tr>
      <td><%= wechat_tag.name %></td>
      <td><%= wechat_tag.tag_id %></td>
      <td><%= wechat_tag.count %></td>
      <td><%= wechat_tag.wechat_user_tags_count %></td>
      <td>
        <%= link_to admin_wechat_app_wechat_users_path(@wechat_app, 'wechat_user_tags.wechat_tag_id': wechat_tag.id), aria: { label: t('.show') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-users"></i>
        <% end %>
        <%= link_to edit_admin_wechat_app_wechat_tag_path(@wechat_app, wechat_tag), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_app_wechat_tag_path(@wechat_app, wechat_tag), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_tags %>
