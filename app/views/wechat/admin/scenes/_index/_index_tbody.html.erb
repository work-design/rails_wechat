<td>
  <span><%= model.match_value %></span>
</td>
<td>
  <p><time data-controller="time"><%= model.created_at.to_fs(:iso8601) %></time></p>
  <p><time data-controller="time" class="<%= model.expire_at && model.expire_at < Time.current ? 'has-text-danger' : 'has-text-success' %>"><%= model.expire_at&.to_fs(:iso8601) %></time></p>
</td>
<td></td>
<td>
  <%= link_to({ controller: 'wechat_users', 'user_tags.tag_name': model.match_value }, aria: { label: t('wechat.admin.wechat_users.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-regular fa-users"></i>
  <% end if model.tag %>
  <%= link_to({ controller: 'responses', action: 'show', id: model.response.id }, aria: { label: t('wechat.admin.responses.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fa-regular fa-reply-all"></i>
  <% end if model.response %>
</td>
