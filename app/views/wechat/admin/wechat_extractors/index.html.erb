<% content_for :breadcrumb do %>
  <ul>
    <li><%= link_to t('wechat.admin.wechat_apps.index.title'), admin_wechat_apps_path %></li>
    <li><%= link_to @wechat_response.wechat_app.name, admin_wechat_apps_path(id: @wechat_response.wechat_app) %></li>
    <li><%= link_to t('wechat.admin.wechat_responses.index.title'), admin_wechat_app_wechat_responses_path(@wechat_response.wechat_app) %></li>
    <li class="is-active"><%= t('.title') %></li>
  </ul>
<% end %>

<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= WechatExtractor.human_attribute_name(:name) %></th>
      <th><%= WechatExtractor.human_attribute_name(:prefix) %></th>
      <th><%= WechatExtractor.human_attribute_name(:suffix) %></th>
      <th><%= WechatExtractor.human_attribute_name(:more) %></th>
      <th>
        <p><%= WechatExtractor.human_attribute_name(:start_at) %></p>
        <p><%= WechatExtractor.human_attribute_name(:finish_at) %></p>
      </th>
      <th>
        <p class="ui green text"><%= WechatExtractor.human_attribute_name(:valid_response) %></p>
        <p class="ui red text"><%= WechatExtractor.human_attribute_name(:invalid_response) %></p>
      </th>
      <th>
        <p><%= WechatExtractor.human_attribute_name(:serial) %></p>
        <p><%= WechatExtractor.human_attribute_name(:serial_start) %></p>
      </th>
      <th>
        <%= link_to new_admin_wechat_response_wechat_extractor_path(@wechat_response), remote: true, class: 'button is-link is-small' do %>
          <i class="fas fa-plus"></i><% t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @wechat_extractors.each do |wechat_extractor| %>
    <tr>
      <td><%= wechat_extractor.name %></td>
      <td><%= wechat_extractor.prefix.inspect if wechat_extractor.prefix %></td>
      <td><%= wechat_extractor.suffix.inspect if wechat_extractor.suffix %></td>
      <td>
        <div class="ui toggle checkbox">
          <%= check_box_tag '[wechat_extractor]more', nil, wechat_extractor.more, data: { method: :patch, remote: true, url: admin_wechat_response_wechat_extractor_path(@wechat_response, wechat_extractor), submit: true }, id: nil %>
        </div>
      </td>
      <td>
        <p><%= wechat_extractor.start_at.to_s(:time) if wechat_extractor.start_at %></p>
        <p><%= wechat_extractor.finish_at.to_s(:time) if wechat_extractor.finish_at %></p>
      </td>
      <td>
        <p class="has-text-success"><%= wechat_extractor.valid_response %></p>
        <p class="has-text-danger"><%= wechat_extractor.invalid_response %></p>
      </td>
      <td>
        <div>
          <div class="ui toggle checkbox">
            <%= check_box_tag '[wechat_extractor]serial', nil, wechat_extractor.serial, data: { method: :patch, remote: true, url: admin_wechat_response_wechat_extractor_path(@wechat_response, wechat_extractor), submit: true }, id: nil %>
          </div>
        </div>
        <p><%= wechat_extractor.serial_start %></p>
      </td>
      <td>
        <%= link_to admin_wechat_response_wechat_extractor_path(@wechat_response, wechat_extractor), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-eye"></i>
        <% end %>
        <%= link_to edit_admin_wechat_response_wechat_extractor_path(@wechat_response, wechat_extractor), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-pencil-alt"></i>
        <% end %>
        <%= link_to admin_wechat_response_wechat_extractor_path(@wechat_response, wechat_extractor), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, class: 'button is-small is-rounded is-light' do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @wechat_extractors %>
