<div id="tr_<%= model.id %>" class="media">
  <div class="media-content">
    <%= yield %>
  </div>
  <div class="media-right has-block-centered">
    <% if Current.session.uid == model.uid %>
      <div class="tags has-addons mb-0">
        <span class="tag">
          <%= svg_tag 'check', class: 'icon is-small' %>
        </span>
        <span class="tag is-success">当前登录</span>
      </div>
    <% end %>
    <%= button_to({ action: 'actions', id: model.id }, class: 'button is-borderless') do %>
      <%= svg_tag 'ellipsis-vertical' %>
    <% end %>
  </div>
</div>
