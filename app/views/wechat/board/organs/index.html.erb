<div class="hero-body">
  <% @organs.each do |organ| %>
    <div class="box">
      <div class="media is-middle">
        <div class="media-left">
          <%= image_tag organ.logo.variant(resize_to_limit: [150, 150]), class: 'image is-48x48' if organ.logo.attached? %>
        </div>
        <div class="media-content">
          <strong><%= organ.name %></strong>
        </div>
        <div class="media-right">
          <%= link_to '我的', { controller: '/me/home', host: organ.host }, class: 'card-footer-item' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
