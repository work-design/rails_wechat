<div class="box is-padding-less">
  <div class="weui-panel__bd">
    <%= render partial: 'organ', collection: @organs, as: :organ %>
  </div>
</div>

<div class="weui-panel">
  <div class="weui-panel__bd">
  <% Roled::OrganRole.visible.each do |role| %>
    <%= link_to({ controller: 'organs', action: 'new', role_id: role.id, **params.permit(:corp_id) }, class: 'media') do %>
      <i class="fa-solid fa-plus"></i>
      <span class="pl-1"><%= role.name %></span>
    <% end %>
  <% end %>
  </div>
</div>
