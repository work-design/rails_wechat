<div class="column is-6"></div>
<div class="column is-6">
  <div class="panel" style="width: 300px">
    <div class="panel-heading text-centered">
      <h4>微信登陆</h4>
    </div>
    <div class="panel-block background-white text-centered">
      <figure>
        <%= image_tag @scene.qrcode_data_url %>
        <figcaption>请使用微信扫描二维码登录</figcaption>
      </figure>
    </div>
    <div class="panel-block background-white justify-content-center">
      <%= link_to({ controller: 'auth/sign', action: 'sign' }) do %>
        <i class="fa-solid fa-user"></i>
        <span class="text-grey">账号密码登录</span>
      <% end if defined? RailsAuth %>
    </div>
  </div>
</div>
