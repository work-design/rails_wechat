<%= render 'head' %>

<div class="weui-panel mt-0" style="padding-top: 1px">
  <div class="weui-panel__bd">
    <div class="weui-cells mt-0">
    <% if @requests.blank? %>
      <%= render partial: 'gift_content' %>
    <% else %>
      <%= render partial: 'request', collection: @requests, as: :request %>
    <% end %>
    </div>
  </div>
</div>

<%= paginate @requests, window: 1 %>

<div
  data-controller="wx-share"
  data-wx-share-options-value="<%= current_js_app.js_config(request.original_url).to_json %>"
  data-wx-share-apis-value="<%= ['updateTimelineShareData', 'updateAppMessageShareData'].to_json %>"
  data-wx-share-title-value="分享有礼"
  data-wx-share-desc-value="测试下描述"
  data-wx-share-link-value="<%= url_for(controller: '/home', action: 'carousel', invite_code: @scene.id, only_path: false) %>"
  data-wx-share-image-value="<%= image_url('logo_reverse.png') %>"
>
</div>

<div
  data-controller="mask"
  data-action="click->mask#close"
  class="weui-mask weui-mask-share"
  id="mask"
  style="display: none"
>
</div>

<% content_for :reload do %>
  <meta name="turbo-visit-control" content="reload">
<% end %>
