<div class="weui-form-preview is-box">
  <div class="weui-form-preview__hd">
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= register.id_name %></label>
    </div>
  </div>
  <div class="weui-form-preview__bd">
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Wechat::Register.human_attribute_name(:qrcode) %></label>
      <div class="weui-form-preview__value">
        <%= image_tag register.qrcode if register.qrcode.attached? %>
      </div>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Wechat::Register.human_attribute_name(:appid) %></label>
      <span class="weui-form-preview__value"><%= register.appid %></span>
    </div>
    <div class="weui-form-preview__item">
      <label class="weui-form-preview__label"><%= Wechat::Register.human_attribute_name(:email) %></label>
      <span class="weui-form-preview__value"><%= register.email %></span>
    </div>
  </div>
  <div class="weui-form-preview__ft">
    <%= link_to my_register_path(register), method: :delete, aria: { label: t('.destroy') }, data: { turbo_confirm: t('.confirm') }, class: 'weui-form-preview__btn weui-form-preview__btn_default' do %>
      <i class="fa-regular fa-user-secret"></i>
      <span>加密发送密码到微信</span>
    <% end if false %>
  </div>
</div>
