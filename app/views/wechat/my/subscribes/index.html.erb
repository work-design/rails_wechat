<div class="ui top attached segment">
  <%= render 'filter' %>
</div>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Wechat::Subscribed.human_attribute_name(:template) %></th>
      <th><%= Wechat::Subscribed.human_attribute_name(:status) %></th>
      <th><%= Wechat::Subscribed.human_attribute_name(:sending_at) %></th>
      <th>
        <%= link_to new_my_subscribe_path, class: 'button is-link is-small' do %>
          <%= svg_tag 'plus' %><%= t('.new.title') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @subscribes.each do |subscribe| %>
    <tr>
      <td><%= subscribe.template %></td>
      <td><%= subscribe.status %></td>
      <td><%= subscribe.sending_at %></td>
      <td>
        <%= link_to my_subscribe_path(subscribe), aria: { label: t('.show.title') }, class: 'button is-small is-borderless' do %>
          <%= svg_tag 'eye', class: 'icon text-info' %>
        <% end %>
        <%= link_to edit_my_subscribe_path(subscribe), aria: { label: t('.edit.title') }, class: 'button is-small is-borderless' do %>
          <%= svg_tag 'pencil' %>
        <% end %>
        <%= link_to my_subscribe_path(subscribe), method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.destroy.confirm') }, class: 'button is-small is-borderless' do %>
          <%= svg_tag 'trash' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @subscribes %>
