<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <div data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'scenes', app_id: model.id }, aria: { label: t('wechat.in.scenes.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-qrcode has-text-primary"></i>
      <% end %>
      <%= link_to({ controller: 'admin/payees', app_id: model.appid }, aria: { label: t('wechat.admin.payees.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-brands fa-amazon-pay has-text-success"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, data: { turbo_frame: 'modal' }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info has-text-info"></i>
      <% end %>
    </div>
  </td>
</tr>
