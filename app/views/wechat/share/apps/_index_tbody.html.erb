<td><%= model.type_i18n %></td>
<td><%= model.name %></td>
<td>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:appid) %></dt>
    <dd><%= model.appid %></dd>
  <% end if model.appid.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:agentid) %></dt>
    <dd><%= model.agentid %></dd>
  <% end if model.agentid.present? %>
  <%= content_tag :dl do %>
    <dt data-show-target="item" class="has-text-grey" style="visibility: hidden"><%= Wechat::App.human_attribute_name(:mch_id) %></dt>
    <dd><%= model.mch_id %></dd>
  <% end if model.mch_id.present? %>
</td>
<td>
  <%= link_to({ controller: 'scenes', app_id: model.id }, aria: { label: t('wechat.share.scenes.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fas fa-qrcode"></i>
  <% end %>
  <%= link_to({ controller: 'admin/requests', app_id: model.id }, aria: { label: t('wechat.admin.requests.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fas fa-comments"></i>
  <% end %>
  <%= link_to({ controller: 'admin/wechat_tags', app_id: model.id }, aria: { label: t('wechat.admin.wechat_tags.index.title') }, class: 'button is-small is-rounded is-light') do %>
    <i class="fas fa-user-tag"></i>
  <% end %>
</td>
