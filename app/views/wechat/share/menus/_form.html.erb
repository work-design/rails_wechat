<%= render 'error_messages', target: f.object %>
<%= f.collection_select :parent_id, @parents, :id, :name, include_blank: true %>
<%= f.select :type, options_for_select(@types, f.object.type) %>
<%= f.text_field :name, required: true %>
<%= f.text_field :value, required: true %>
<%= f.text_field :mp_appid %>
<%= f.text_field :mp_pagepath %>
<%= f.number_field :position, step: 1 %>
<%= f.fields :scene_menus do |ef| %>
  <%= ef.hidden_field :scene_id, value: params[:scene_id] %>
<% end %>
