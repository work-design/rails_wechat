    <i class="fa-brands fa-fw fa-weixin"></i>
    <span><%= t('wechat.in.title') %></span>
    <i class="fa-solid dropdown"></i>
  </a>
  <div class="menu-list" data-empty-target="content">
    <%= link_to t('wechat.in.apps.index.title'), { controller: 'wechat/in/apps' }, class: active_helper(controllers: ['wechat/in/apps', 'wechat/in/menus', 'wechat/in/scenes', 'wechat/in/wechat_users'], active: 'is-active') %>
  </div>
</div>
