    <%= link_to t('wechat.into.apps.index.title'), { controller: 'wechat/into/apps' }, class: active_helper(controllers: ['wechat/into/apps', 'wechat/into/menus', 'wechat/into/scenes', 'wechat/into/wechat_users'], active: 'is-active') %>
  <% end %>
  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-brands fa-fw fa-weixin"></i>
    <span><%= t('wechat.into.title') %></span>
    <i class="fa-solid dropdown"></i>
  </a>
</div>
