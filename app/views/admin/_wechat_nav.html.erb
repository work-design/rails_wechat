<div class="<%= active_helper(modules: 'wechat/admin', active: 'menu ex-accordion is-active', item: 'menu ex-accordion is-active') %>" data-controller="menu">
  <%= content_tag :div, class: 'menu-list' do %>
    <%= link_to t('wechat.admin.menus.index.title'), { controller: 'wechat/admin/menus' }, class: active_helper(controllers: 'wechat/admin/menus', active: 'is-active') %>
    <%= link_to t('wechat.admin.apps.index.title'), { controller: 'wechat/admin/apps' }, class: active_helper(controllers: 'wechat/admin/apps', active: 'is-active') %>
    <%= link_to t('wechat.admin.organs.show.title'), { controller: 'wechat/admin/organs', action: 'show' }, class: active_helper(controllers: ['organs'], active: 'is-active') -%>
  <% end %>
  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-brands fa-fw fa-weixin"></i>
    <span><%= t('wechat.admin.title') %></span>
    <i class="fa-solid dropdown"></i>
  </a>
</div>
<div class="<%= active_helper(modules: 'wechat/into', active: 'menu ex-accordion is-active', item: 'menu ex-accordion is-active') %>" data-controller="menu">
