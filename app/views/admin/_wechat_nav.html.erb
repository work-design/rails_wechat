<div class="<%= active_helper(modules: 'wechat/admin', active: 'menu ex-accordion is-active', item: 'menu ex-accordion is-active') %>" data-controller="menu empty">
  <a class="menu-label" data-action="menu#toggle">
    <i class="fa-brands fa-fw fa-weixin"></i>
    <span><%= t('wechat.admin.title') %></span>
    <i class="fa-solid dropdown"></i>
  </a>
  <div class="menu-list" data-empty-target="content">
    <%= link_to t('wechat.admin.apps.index.title'), { controller: 'wechat/admin/apps' }, class: active_helper(controllers: 'wechat/admin/apps', active: 'is-active') %>
    <%= link_to t('wechat.admin.agents.index.title'), { controller: 'wechat/admin/agents' }, class: active_helper(controllers: 'wechat/admin/agents', active: 'is-active') %>
    <%= link_to t('wechat.admin.payees.index.title'), { controller: 'wechat/admin/payees' }, class: active_helper(controllers: 'wechat/admin/payees', active: 'is-active') %>
    <%= link_to t('wechat.admin.organs.show.title'), { controller: 'wechat/admin/organs', action: 'show' }, class: active_helper(controllers: ['organs'], active: 'is-active') %>
    <%= link_to t('wechat.admin.members.index.title'), { controller: 'wechat/admin/members' }, class: active_helper(controllers: ['members'], active: 'is-active') %>
  </div>
</div>
<div class="<%= active_helper(modules: 'wechat/in', active: 'menu ex-accordion is-active', item: 'menu ex-accordion is-active') %>" data-controller="menu empty">
