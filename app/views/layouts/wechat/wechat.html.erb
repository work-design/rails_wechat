<%= render layout: 'layouts/application_head' do %>
  <%= render 'nav_bar' %>
  <%= render 'alert' %>
  <turbo-frame id="main" refresh="morph" data-turbo-action="advance" class="has-animate-background">
    <div class="has-column-centered is-fullheight">
      <turbo-frame id="box" refresh="morph" data-turbo-action="advance" class="box" style="width: 400px">
        <%= yield %>
      </turbo-frame>
    </div>
  </turbo-frame>
  <%= render 'footer' %>
<% end %>
